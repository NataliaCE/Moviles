<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="40dp">

    <TextView
        android:id="@+id/tv_grupoAnyadir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/grupo"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/et_grupoAnyadir"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_grupoAnyadir"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/tv_discoAnyadir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/et_grupoAnyadir"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/disco"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/et_discoAnyadir"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_discoAnyadir"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/btn_anyadirAnyadir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/et_discoAnyadir"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/a_adir"
        android:textSize="20dp"
        android:onClick="clickAnyadirBD"/>

    <Button
        android:id="@+id/btn_volverAnyadir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/et_discoAnyadir"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/volver"
        android:textSize="20dp"
        android:onClick="clickVolver"/>


</androidx.constraintlayout.widget.ConstraintLayout>