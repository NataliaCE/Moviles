<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="40dp">

    <TextView
        android:id="@+id/tv_grupoActualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/grupo"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/tv_grupoBDActualizar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_grupoActualizar"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/tv_discoActualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_grupoBDActualizar"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/disco"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/et_discoActualizar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_discoActualizar"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="25dp"
        android:textCursorDrawable="@color/black"
        android:backgroundTint="@color/black"/>

    <Button
        android:id="@+id/btn_actualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/et_discoActualizar"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/actualizar"
        android:textSize="20dp"
        android:onClick="clickActualizarBD"/>

    <Button
        android:id="@+id/btn_volverActualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/et_discoActualizar"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/volver"
        android:textSize="20dp"
        android:onClick="clickVolverConsulta"/>

</androidx.constraintlayout.widget.ConstraintLayout>