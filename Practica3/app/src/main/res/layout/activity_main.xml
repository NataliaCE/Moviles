<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/spain"
        android:layout_width="184dp"
        android:layout_height="132dp"
        android:src="@drawable/spain"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/portugal"
        android:layout_width="184dp"
        android:layout_height="132dp"
        android:src="@drawable/portugal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/spain"/>

    <ImageView
        android:id="@+id/francia"
        android:layout_width="184dp"
        android:layout_height="132dp"
        android:src="@drawable/france"
        app:layout_constraintTop_toBottomOf="@id/spain"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>